<h2><%= t('devise.registrations.edit.title', name: resource_name.to_s.humanize ) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.registrations.edit.wait_confirm', email: resource.unconfirmed_email ) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('devise.registrations.edit.helper_password' ) %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.registrations.edit.password_length', password: @minimum_password_length ) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('devise.registrations.edit.helper_current_password' ) %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3><%= t('devise.registrations.edit.cancel_text' ) %></h3>

<div><%= t('devise.registrations.edit.unhappy') %><%= button_to t('devise.buttons.cancel'), registration_path(resource_name), data: { confirm: t('devise.buttons.confirm'), turbo_confirm: t('devise.buttons.confirm') }, method: :delete %></div>

<%= link_to t('links.back'), :back %>
