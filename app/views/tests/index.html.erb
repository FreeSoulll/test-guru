<h1><%= t('tests.index.header') %></h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
     <th class='sort-by-title pointer'>
        <%= t('tests.index.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('tests.index.level') %></th>
      <th><%= t('tests.index.count') %></th>
      <th colspan="4"><%= t('tests.index.actions') %></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <%= render @tests %>
  </tbody>
</table>
