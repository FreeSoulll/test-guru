<span>Question body: <b><%= @question.body %></b></span></br>

<h2>Answers</h2>

<%= link_to 'New answer', new_admin_question_answer_path(@question.id) %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Delete',
question_path(@question),
method: :delete,
data: { confirm: 'Вы уверены?' } %>
<%= link_to 'Edit', edit_admin_question_path(@question) %>
<%= link_to 'Back', admin_test_path(@question.test) %>
